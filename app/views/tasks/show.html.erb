<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd" } do %>
    <div
      class="fixed inset-0 flex items-center justify-center h-screen w-screen bg-black 
             bg-opacity-40 backdrop-filter backdrop-blur-lg z-10 animated fadeInUp"
    >
      <div
        class="w-[40%] rounded-lg bg-gray-100 p-7"
        data-turbo-modal-target="modal"
        data-action="click@window->turbo-modal#outsideClose"
      >
        <h1 class="font-bold text-center text-4xl">
          <%= @task.title %> Details
        </h1>
        <p>
          <%= @task.description %>
        </p>
      </div>
    </div>
  <% end %>
<% end %>
